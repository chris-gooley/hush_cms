- title 'New Image'

- content_for :sidebar do
  = link_to 'New Image', new_hush_cms_admin_image_path, :id => 'sidebar-new-image'

#breadcrumbs
  = link_to 'All Images', hush_cms_admin_images_path

- form_for @image, :url => hush_cms_admin_images_path, :html => { :multipart => true } do |form|
  .row
    = form.label :name
    = form.text_field :name
    
  .row
    = form.label :image
    = form.file_field :image
    
  = submit_tag 'Upload Image'
