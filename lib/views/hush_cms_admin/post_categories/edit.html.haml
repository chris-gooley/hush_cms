- title "Editing #{@post_category.name}"

- content_for :sidebar do
  = link_to 'New Category', new_hush_cms_admin_post_category_path, :id => 'sidebar-new-post-category'
  = render :partial => 'post_categories', :object => @post_categories

- form_for @post_category, :url => hush_cms_admin_post_category_path(@post_category) do |form|
  .row
    = form.label :name
    = form.text_field :name
  
  .row
    = form.label :description
    = form.text_area :description
    
  .row    
    %span
      = form.check_box :has_comments
      = image_tag 'hush_cms/comments.png'
      Comments
  
  
    %span
      = form.check_box :has_feed
      = image_tag 'hush_cms/feed.png'
      Feed

  = submit_tag 'Update Category'
