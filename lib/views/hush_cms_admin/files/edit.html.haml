- title "Editing #{@file.name}"

- content_for :sidebar do
  = link_to 'New File', new_hush_cms_admin_file_path, :id => 'sidebar-new-file'
  = link_to 'Delete File', hush_cms_admin_file_path(@file), :method => :delete, :id => 'sidebar-delete-file', :confirm => 'Are you sure?'

#breadcrumbs
  = link_to 'All Files', hush_cms_admin_files_path

- form_for @file, :url => hush_cms_admin_file_path(@file), :html => { :multipart => true } do |form|
  .row
    = form.label :name
    = form.text_field :name
    
  .row
    = form.label :file
    = form.file_field :file
    = image_tag @file.file.url, :alt => @file.name, :class => 'image'
    
  = submit_tag 'Update file'
